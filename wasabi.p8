guy = {
	x = 60,
	y = 60,
	s = 1,
	vx = 0,
	vy = 0
}
function guy:update()
	
	if xinput != 0 then
		self.vx = xinput
	elseif self.vx != 0 then
		self.vx -= sgn(self.vx)*0.1
	end
	self.x += self.vx
end

function guy:draw()
	spr(self.s,self.x,self.y,2,2)
	print(self.vx,self.x,self.y-8,0)
end

xinput = 0

